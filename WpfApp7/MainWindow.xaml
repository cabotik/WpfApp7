<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Name="spAutho" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Margin="5" Content="Authorization" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Margin="5" Content="Enter login"/>
                <TextBox Margin="5" Name="tbLogin" Width="70"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                <Label  Margin="5" Content="Enter password"/>
                <PasswordBox  Margin="5" Name="pbPass" Width="70"/>
            </StackPanel>
            <Button Name="btnEnter" Content="Enter" Background="CadetBlue" Margin="5" Click="btnEnter_Click">
            </Button>
        </StackPanel>
    </Grid>
</Window>
